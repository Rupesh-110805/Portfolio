# ============================================
# FASTAPI BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in values
# ============================================

# -------------------- DATABASE --------------------
# Optional: Defaults to SQLite (portfolio.db) if not set
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db

# -------------------- EMAIL (SMTP) --------------------
# For contact form notifications
# Gmail users: Create an App Password (not your regular password)
# Guide: https://support.google.com/accounts/answer/185833

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Portfolio Contact
MAIL_TO=your-email@gmail.com

# -------------------- SECURITY --------------------
# Admin secret for protected routes (blocking spammers)
# Generate a strong random string for production
ADMIN_SECRET=change-me-in-production

# -------------------- CORS --------------------
# Frontend URL for CORS (production only)
FRONTEND_URL=https://your-portfolio.vercel.app
